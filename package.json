{
  "name": "esp-typescript",
  "version": "1.0.0",
  "description": "Running a JavaScript / TypeScript app on a microcontroller.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require ts-node/register test/**/*.spec.ts",
    "build": "rollup -c",
    "upload": "espruino --no-ble -p COM15 -b 115200 dist/cjs.js",
    "transpile": "npm run-script build && npm run-script upload",
    "serial": "espruino -b 115200 -p COM15 --no-ble"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.1",
    "rollup-plugin-es3": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "ts-node": "^10.6.0"
  }
}
